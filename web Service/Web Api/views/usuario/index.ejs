<% include ../Shared/layout %>
    <h2 class="text-center"><%=saludo %></h2>
    <div class="row" ng-controller="userController">
        <div class="col-lg-6" >
            <div class="form-inline">
                <input type="text" class="form-control" style="margin: 1px 5px" placeholder="Buscar..." ng-model="searchUS" />
                <button type="button" class="btn btn-sm btn-outline-success" data-target="#agregarUSMO" data-toggle="modal">Agregar</button>
            </div>
            <div style="margin: 5px 1px; border-bottom: solid 1px #363636; border-radius: 3px; padding: 4px" ng-repeat="user in userList | filter: searchUS ">
              <h2>{{user.nombre+" "+user.apellido}}</h2>
              <p>Telefono: <a href="tel:{{user.telefono}}">{{user.telefono}}</a></p>
              <p>Correo: <a href="mailto:{{user.correo}}">{{user.correo}}</a></p>
              <p>Categoria: {{user.nombreCategoria}}</p>
              <div class="btn-group"><button type="button" ng-click="setCont(user)" data-target="#editarUSMO" data-toggle="modal" class="btn btn-sm btn-outline-warning">Modificar</button><button type="button" ng-click="setCont(user)" data-target="#eliminarUSMO" data-toggle="modal" class="btn btn-sm btn-outline-danger">Borrar</button></div>
            </div>
        </div>
    <% include agregarMO %>
    <% include editarMO %>
    <% include eliminarMO %>
    <% include ../contacto/editarMO %>
    </div>
<% include ../Shared/footer %>
<% include ../Shared/layout %>
    <h2 class="text-center"><%=saludo %></h2>
    <div class="row" ng-controller="citasController">
        <div class="col-lg-6" >
            <div class="form-inline">
                <input type="text" class="form-control" style="margin: 1px 5px" placeholder="Buscar..." ng-model="searchCI" />
                <button type="button" class="btn btn-sm btn-outline-success" data-target="#agregarCIMO" data-toggle="modal">Agregar</button>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th><th>Fecha</th><th>Contacto</th><th>Lugar</th><th>Descripcion</th><th>Opciones</th>
                    </tr>
                </thead>
                <tbody >
                     <tr ng-repeat="citas in citasList | filter: searchCI ">
                        <td>{{citas.idCita}}</td><td>{{citas.fecha}}</td><td>{{citas.nombre+" "+citas.apellido}}</td><td>{{citas.lugar}}</td><td>{{citas.descripcion}}</td>
                        
                        <td><div class="btn-group"><button type="button" ng-click="setCit(citas)" data-target="#editarCIMO" data-toggle="modal" class="btn btn-sm btn-outline-warning">Modificar</button><button type="button" ng-click="setCit(citas)" data-target="#eliminarCIMO" data-toggle="modal" class="btn btn-sm btn-outline-danger">Borrar</button></div></td>
                    </tr>
                </tbody>
            </table>
        </div>
       <% include agregarMO %>
       <% include editarMO %>
       <% include eliminarMO %>
       <% include ../contacto/editarMO %>
    </div>
<% include ../Shared/footer %>